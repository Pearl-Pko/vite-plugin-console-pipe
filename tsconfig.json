{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": false,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "sourceMap": true,
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"]
          }
    },
    "include": ["src", "index.d.ts"],
    "exclude": ["node_modules", "dist", "example"]
}
